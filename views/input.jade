link(rel="stylesheet", type="text/css", href="/stylesheets/input.css")
script(type="text/javascript", src="/js/input.js")

.container
  .navbar.navbar-fixed-top
    .navbar-inner
      .container
        a.brand(href="/") Vote
        ul.nav
          li
            a(href="/") Top
          li
            a(href="/") Link

  br
  br

  .container
    form.well(method="post", action="/confirm")
      h2 質問の内容を入力してください。
      alert.alert-error
        h3 最大で5個まで選択肢を増やせます。
      hr
      fieldset
        label Nickname
        input.input-block-level(type="text", id="nickname", name="nickname", placeholder="Nick name")
        label Password
        input.input-block-level(type="password", id="password", name="password", placeholder="Password")
        label Question title
        input.input-block-level(type="text", id="title", name="title", placeholder="Title")
        label Question detail
        textarea.input-block-level(rows="15", id="description", name="description", placeholder="Description")
        label Choise
        input.input-block-level(type="text", id="choice1", name="choice1", placeholder="Choice1")
        input(type="button", class="btn btn-large btn-success pull-right", id="add_btn", value="選択肢追加")
      hr
      button.btn-large.btn-primary(type="submit") Confirm

  hr

